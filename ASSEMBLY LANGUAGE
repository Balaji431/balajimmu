8-bit division

LDA 8501
        MOV B, A
        LDA 8500
        MVI C,00
LOOP:   CMP B
        JC LOOP1
        SUB B
        INR C
       JMP LOOP 
LOOP1:  STA 8502
        MOV A, C
        STA 8503
        RST 1

16-bit sub
 LHLD 2050
      XCHG
      LHLD 2052
      MVI C,00
      MOV A, E
      SUB L
      STA 2054
      MOV A, D
      SUB H
      STA 2055
      HLT
 16-bit mul
 LHLD 2050
         SPHL
         LHLD 2052
         XCHG
         LXI H,0000H
         LXI B,0000H        
AGAIN: DAD SP
         JNC START 
         INX B
         START: DCX D
         MOV A,E
         ORA D
         JNZ AGAIN
         SHLD 2054
         MOV L,C
         MOV H,B
         SHLD 2055
         HLT
16-bit div
LDA 8501
MOV B,A
LDA 8500
MVI C,00
LOOP:CMP B
JC LOOP1
SUB B
INR C
JMP LOOP
STA 8503
MOV A,C
LOOP1: STA 8502
RST 1

       SQUARE OF A NUMBER?//////

LXI H,8000
XRA A
MOV B,M
LOOP: ADD M
DCR B
JNZ LOOP
STA 8001
HLT
                  ACSENDING ORDER

LOOP: LXI H,3500
MVI D,00
MVI C,05
LOOP1: MOV A,M
INX H
CMP M
JC LOOP2
MOV B,M
MOV M,A
DCX H
MOV M,B
INX H
MVI D,01
LOOP2: DCR C
JNZ LOOP1
MOV A,D
RRC
JC LOOP
HLT
       DESCENDING ORDER

LOOP: LXI H,3500
MVI D,00
MVI C,05
LOOP1: MOV A,M
INX H
CMP M
JNC LOOP2
MOV B,M
MOV M,A
DCX H
MOV M,B
INX H
MVI D,01
LOOP2: DCR C
JNZ LOOP1
MOV A,D
RRC
JC LOOP
HLT
          BIGGEST OF A NUMBER
LXI H,2050
MOV C,M
DCR C
INX H
MOV A,M
LOOP1: INX H
CMP M
JNC LOOP
MOV A,M
LOOP: DCR C
JNZ LOOP1
STA 2058
HLT

           SMALLEST OF A NUM ER
LXI H,2050
MOV C,M
DCR C
INX H
MOV A,M
LOOP1: INX H
CMP M
JC LOOP
MOV A,M
LOOP: DCR C
JNZ LOOP1
STA 2058
HLT

                  FACTORIAL OF A NUMBER
LDA 2001
MOV B,A
MVI C,01H
MVI E,01H
LOOP: MOV D,C
MVI A,00H
LP: ADD E
DCR D
JNZ LP
MOV E,A
INR C
DCR B
JNZ LOOP
MOV A,E
STA 2010
HLT
             ADDITION OF N NUMBERS
LXI H,8000
MOV C,M
XRA A
MOV B,A
LOOP:  INX H
ADD M
JNC SKIP
 INR B
SKIP: DCR C
JNZ LOOP
 INX H
 MOV M,A
 INX H
  MOV M,B
 HLT
              1'S,2'S COMPLEMENT
LDA 3000
CMA
STA 3001
ADI 01
STA 3002
HLT
             SWAPPING OF A NUMBERS
LDA 2001
MOV B,A
LDA 2002
STA 2001
MOV A,B
STA 2002
HLT
